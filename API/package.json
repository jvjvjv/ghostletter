{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "ghost-letter-api",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "Ghostletter Laravel API",
    "scripts": {
        "dev": "php artisan serve --host=0.0.0.0 --port=8000",
        "build": "echo 'Laravel does not require a build step'",
        "test": "php artisan test",
        "migrate": "php artisan migrate",
        "migrate:fresh": "php artisan migrate:fresh --seed",
        "lint": "php artisan pint",
        "vite:build": "vite build",
        "vite:dev": "vite"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    }
}
